<h1> My Goals </h1><br> 

<p><a href="/goals/new">Make a New Goal </a></p><br>

<div class="main">
<% @goals.each do |goal| %>
    <div class="goal">
    
    <p><%=goal.content%></p>
    <p>Date Created: <%=goal.date_created%></p>
    <p>To be accomplished by: <%=goal.completion_goal_date%></p>
    <% if !!goal.successful?%>
        <p>Congrats! You Accomplished This Goal!</p>
    <%else%>
        <p><a href="/goals/<%=goal.id%>/edit">Edit Goal or Mark Accomplished </a></p>
        <%end%>
    <form method="post" action="/goals/<%=goal.id%>/delete" >
    <input id="hidden" type="hidden" name="_method" value="DELETE">
    <input type="submit" value="Delete Goal">
    </form>
        <br><br>
    <%end%>
    
    </div>
</div>

