<% if flash.has?(:message) %>
<%= flash[:message] %>
<% end %>


<h2>Your Goal</h2>

    <h3><%=@goal.content%></h3><br>
    <p>Date Created: <%=@goal.date_created%></p>
    <p>To be accomplished by: <%=@goal.completion_goal_date%></p>
    
    <% if @goal.successful == 1 %>
    <p>You Accomplished This Goal!</p>
    <%else%>
    <p><a href="/goals/<%=@goal.id%>/edit">Edit or Mark Accomplished </a></p>
    <%end%>

    <p><a href="/goals">Home</a></p>

    <form method="post" action="/goals/<%= @goal.id %>/delete">
    <input id="hidden" type="hidden" name="_method" value="DELETE">
    <input type="submit" value="Delete Goal">
    </form>

